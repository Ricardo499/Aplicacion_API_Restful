<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3D3D3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="120dp"
        android:gravity="center"
        android:text="@string/Datos_Usuario"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textViewUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="@string/TextView"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textViewCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="@string/TextView"
        android:textSize="20sp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="@string/TextView"
        android:textSize="20sp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/textViewNacionalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:text="@string/TextView"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/opcion_Admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:text="@string/Adminsitar"
            android:textSize="20sp"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin"
            android:layout_marginStart="-320dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:minHeight="48dp"/>
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editar"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:minHeight="48dp"/>
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eliminar"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:minHeight="48dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>
    <TextView
        android:id="@+id/opcionesExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:gravity="center"
        android:text="@string/extra"
        android:textSize="20sp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/nortificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nortificacion"
        android:layout_marginStart="-350dp"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapa"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:minHeight="48dp"/>
    <Button
        android:id="@+id/cerrar_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cerrar_session"
        android:layout_marginStart="-220dp"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:minHeight="48dp"/>

</LinearLayout>

</LinearLayout>